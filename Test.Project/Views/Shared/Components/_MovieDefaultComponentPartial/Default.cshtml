@model List<ResultMovieDto>
@{
    int count = 1;
}

<section class="movie-p background-image" style="background-image: url(&quot;https://digiturk-internet.com.tr/Content/assets/img/bg/movie-bg.webp&quot;);">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 movieTitle">
                <h2 style="text-align:center">Yüzlerce İçerik Elinizin Altında</h2>
                <p class="text-center">
                    Filmden diziye, belgeselden spora, eğlenceden çocuk kanallarına televizyon keyfini doyasıya yaşayın!
                </p>
            </div>
            <div class="col-md-12 pt-30">
                <div class="swiper mySwiper swiper-initialized swiper-horizontal">
                    <div class="swiper-wrapper" id="swiper-wrapper-5ba17da643b464e4" aria-live="polite">


                        @foreach(var item in Model)
                        {
                            <div class="swiper-slide swiper-slide-active" style="width: 155.5px; margin-right: 30px;" role="group" aria-label="@count / 22" data-swiper-slide-index="0">
                                <img width="100%" src="@item.ImageUrl" loading="lazy" />
                            </div>
                            count++;
                        }

                    </div>

                    <div class="swiper-button-next" tabindex="0" role="button" aria-label="Next slide" aria-controls="swiper-wrapper-5ba17da643b464e4"></div>
                    <div class="swiper-button-prev" tabindex="0" role="button" aria-label="Previous slide" aria-controls="swiper-wrapper-5ba17da643b464e4"></div>

                    <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
                </div>
            </div>
            <div class="col-md-12 text-center pt-40">
                <a href="/hemen-basvur" title="Film Paketi Satın Al" class="vs-btn vs-btn-slider">Sizi Arayalım</a>
            </div>
        </div>
    </div>
</section>

