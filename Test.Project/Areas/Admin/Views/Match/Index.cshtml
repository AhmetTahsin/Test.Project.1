@model List<ResultMatchDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/_UILayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Ev Sahibi Takım</th>
                                <th>Konuk Takım</th>
                                <th>Ev Sahibi Görsel Url</th>
                                <th>Konuk Görsel Url</th>
                                <th>Maç Zamanı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Team1</td>
                                    <td>@item.Team2</td>
                                    <td>@item.Team1LogoUrl</td>
                                    <td>@item.Team2LogoUrl</td>
                                    <td>@item.MatchTime.ToString("yyyy-MM-dd HH:mm")</td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Admin/Match/CreateMatch/" class="btn btn-primary"> Yeni Maç Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>

