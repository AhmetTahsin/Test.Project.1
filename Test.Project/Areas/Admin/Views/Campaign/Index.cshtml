@model List<ResultCampaignDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/_UILayout.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Kampanya Başlığı</th>
                                <th>Açıklaması</th>
                                <th>Görsel Url</th>
                                <th>Linki</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Descreption</td>
                                    <td>@item.ImageUrl</td>
                                    <td>@item.LinkUrl</td>
                                    <td><a asp-action="DeleteCampaign" asp-route-id="@item.CampaignId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Campaign/UpdateCampaign/@item.CampaignId" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Campaign/CreateCampaign/" class="btn btn-primary"> Yeni Kampanya Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>

